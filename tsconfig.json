{
  "compilerOptions": {
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": false,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "design-system": ["./ds/index.ts"]
    },
    "allowJs": true
  },
  "include": [
    "next-env.d.ts",
    "./app/**/*.ts",
    "./app/**/*.tsx",
    "./core/**/*.ts",
    "./core/**/*.tsx",
    "./emails/**/*.tsx",
    "./lib/**/*.ts",
    "./db/**/*.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", ".next"]
}
